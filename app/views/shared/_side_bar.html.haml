.side_bar
  .side_bar__user-name
    .side_bar__user-name__top-items
      %p.side_bar__user-name__top-items__name
        = current_user.name
      %ul.side_bar__user-name__top-items__icons
        %li.side_bar__user-name__top-items__icons__new-group
          = link_to new_group_path do  
            = fa_icon 'edit'
        %li.side_bar__user-name__top-items__icons__edit-user
          = link_to edit_user_path(current_user) do  
            = fa_icon 'cog'
  .side_bar__group
    - current_user.groups.each do |group|
      .side_bar__group__a
        = link_to "#" do
          %p.side_bar__group__a__name
            = group.name
          %p.side_bar__group__a__message
            メッセージはまだありません。
